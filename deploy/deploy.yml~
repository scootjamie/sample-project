apiVersion: apps/v1beta1
kind: Deployment
metadata:
  name: bugreporter
spec:
  replicas: 1
  template:
    metadata:
      labels:
        app: bugreporter
    spec:
      containers:
      - name: app
        image: docker.prod.corp.scoot.co:5000/bugreporter
        resources:
          limits:
            memory: 256Mi
            cpu: 200m
          requests:
            cpu: 200m
            memory: 256Mi
